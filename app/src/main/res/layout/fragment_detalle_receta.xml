<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_detalle_receta"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="72dp"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Imagen de la receta -->
        <ImageView
            android:id="@+id/image_view_receta_detalle"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:contentDescription="@string/receta_imagen"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_launcher_background" />

        <!-- Nombre de la receta -->
        <TextView
            android:id="@+id/text_view_nombre_detalle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre de la Receta"
            android:textAppearance="?attr/textAppearanceHeadline6"
            android:textStyle="bold"
            android:layout_marginTop="8dp" />

        <!-- Categoría -->
        <TextView
            android:id="@+id/text_view_categoria_detalle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Categoría"
            android:textAppearance="?attr/textAppearanceSubtitle1"
            android:layout_marginTop="4dp" />

        <!-- Tiempo de preparación -->
        <TextView
            android:id="@+id/text_view_tiempo_detalle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tiempo"
            android:textAppearance="?attr/textAppearanceSubtitle1"
            android:layout_marginTop="4dp" />

        <!-- Ingredientes -->
        <TextView
            android:id="@+id/text_view_ingredientes_detalle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ingredientes"
            android:textAppearance="?attr/textAppearanceBody1"
            android:layout_marginTop="8dp" />

        <!-- Instrucciones -->
        <TextView
            android:id="@+id/text_view_instrucciones_detalle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Instrucciones"
            android:textAppearance="?attr/textAppearanceBody1"
            android:layout_marginTop="8dp" />

        <!-- Botones de editar y eliminar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">

            <Button
                android:id="@+id/button_edit_receta"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/edit_receta"
                android:backgroundTint="@android:color/holo_orange_light"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/button_delete_receta"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/delete_receta"
                android:backgroundTint="@android:color/holo_orange_light"
                android:textColor="@android:color/white" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>
